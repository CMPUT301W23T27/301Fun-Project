<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FriendsFragment">

    <EditText
        android:id="@+id/searchFriends"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#D8D6D6"
        android:hint="Search Username"
        android:textAlignment="center"
        android:iconifiedByDefault="false"
        android:queryHint="Search" />

    <Button
        android:id="@+id/addFriendsButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/searchFriends"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button"
        android:text="Add Friend"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/myfriendsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:text="My Friends"
        android:layout_below="@+id/addFriendsButton"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/montserrat_bold"/>

    <ListView
        android:id="@+id/myFriendsListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/leaderboardsButton"
        android:layout_below="@+id/myfriendsText"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/leaderboardsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Leaderboards"
        android:background="@drawable/rounded_button"/>

</RelativeLayout>
