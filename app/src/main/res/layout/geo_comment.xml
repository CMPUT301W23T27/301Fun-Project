<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.MyApplication.AppBarOverlay">

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/Image"
        android:layout_width="315dp"
        android:layout_height="475dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/simple_landscape_photography_tips_with_tons_of_impact" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="400dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="50dp">
        <ImageView
            android:id="@+id/Image1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/screenshot__893__removebg_preview"/>

        <TextView
            android:id="@+id/geo"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:fontFamily="sans-serif-medium"
            android:text="Geo Loaction"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/on_off_spinner"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight = "48dp"
            android:entries="@array/on_off_spinner_options" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="440dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="100dp">

        <ImageView
            android:id="@+id/Image2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/screenshot__894__removebg_preview"/>
        <TextView
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:fontFamily="sans-serif-medium"
            android:text="Add a Comment!"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:layout_marginTop="500dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="200dp"
        android:background="@drawable/text_box_border" >
        <TextView
            android:id="@+id/my_text_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Something Awesome..."
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="650dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="2dp">

        <Button
            android:id="@+id/my_rounded_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post Your Find!"
            android:background="@drawable/rounded_button" />

    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_anchor="@+id/appBarLayout"
        app:layout_anchorGravity="center">

        <ImageButton
            android:id="@+id/my_image_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/screenshot__897__removebg_preview"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/Nicepic"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-medium"
            android:text="Nice Pic"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

</androidx.coordinatorlayout.widget.CoordinatorLayout>