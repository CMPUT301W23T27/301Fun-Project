<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScanCodePage">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.MyApplication.AppBarOverlay">

    </com.google.android.material.appbar.AppBarLayout>


    <ImageView
        android:id="@+id/Image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="325dp"
        android:layout_marginEnd="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Image1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/screenshot__893__removebg_preview" />

        <TextView
            android:id="@+id/geo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:text="Geo Location"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ToggleButton
            android:id="@+id/on_off_toggle"
            android:layout_width="63dp"
            android:layout_height="48dp"
            android:layout_marginRight="48dp"
            android:textOff="@string/ToggleOff"
            android:textOn="@string/ToggleOn" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Image2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/screenshot__894__removebg_preview" />

        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:text="Add a Comment!"
            android:textSize="18sp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="82dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="425dp"
        android:layout_marginEnd="200dp"
        android:background="@drawable/text_box_border"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/my_text_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Something Awesome..."
            android:fontFamily="@font/montserrat_regular"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="200dp"
        android:layout_height="95dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="510dp"
        android:layout_marginEnd="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/latitude"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:text=""
            android:textAlignment="center"
            android:textSize="10sp" />

    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_anchor="@+id/appBarLayout"
        app:layout_anchorGravity="center">

        <ImageButton
            android:id="@+id/my_image_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/screenshot__897__removebg_preview"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/Nicepic"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Nice Pic!"
            android:textSize="18sp"
            android:textStyle="bold"
            />
    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/my_rounded_button"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:text="Post Your Find!"
        app:layout_anchor="@+id/linearLayout2"
        app:layout_anchorGravity="center"
        app:fontFamily="@font/montserrat_bold"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>