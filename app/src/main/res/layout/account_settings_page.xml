<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- App bar with title -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        app:title="Account Information"
        app:titleTextColor="@color/white" />



    <ImageView
        android:id="@+id/avatar_image"
        android:layout_width="105dp"
        android:layout_height="112dp"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="46dp"
        />

    <TextView
        android:id="@+id/username_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username:"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/avatar_image"
        android:layout_alignStart="@id/avatar_image"
        android:layout_marginTop="32dp" />

    <EditText
        android:id="@+id/username_value_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_textview"
        android:layout_alignBaseline="@id/username_textview"
        android:layout_marginTop="-34dp"
        android:layout_toEndOf="@id/username_textview"
        android:text="JohnDoe123"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <!-- Email -->

    <TextView
        android:id="@+id/email_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/username_textview"
        android:layout_alignStart="@id/username_textview"
        android:layout_marginStart="0dp"
        android:layout_marginTop="80dp"
        android:text="Email:"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/email_value_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="johndoe@example.com"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_toEndOf="@id/email_textview"
        android:layout_alignBaseline="@id/email_textview" />

    <!-- Phone number -->

    <TextView
        android:id="@+id/phone_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_textview"
        android:layout_alignStart="@id/email_textview"
        android:layout_marginStart="9dp"
        android:layout_marginTop="162dp"
        android:text="Phone number:"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/phone_value_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/phone_textview"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@id/phone_textview"
        android:text="johndoe@example.com"
        android:textColor="@color/black"
        android:textSize="18sp" />



</LinearLayout>